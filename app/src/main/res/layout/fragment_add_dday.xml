<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDdayFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_viewdday"
        app:layout_constraintVertical_bias="0.29">

        <EditText
            android:id="@+id/edt_daytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Day Title"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_daydate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set Date: 2023-11-09"
            android:inputType="date"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk_private"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:text="Private"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="38dp"
                tools:layout_editor_absoluteY="521dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_color"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:text="Select Color"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="next" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_viewdday"
        android:layout_width="205dp"
        android:layout_height="85dp"
        android:background="#FFFFFF"
        android:text="D-day"
        android:textAlignment="center"
        android:textSize="65dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />


</androidx.constraintlayout.widget.ConstraintLayout>